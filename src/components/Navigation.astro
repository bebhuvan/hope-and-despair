---
const currentPath = Astro.url.pathname;
---

<nav class="nav-bar">
  <div class="nav-content">
    <a href="/" class="nav-logo">
      <span class="nav-logo-icon">ðŸŒ—</span>
      Hope & Despair
    </a>
    <div class="nav-links">
      <a href="/" class={`nav-link ${currentPath === '/' ? 'active' : ''}`}>Home</a>
      <a href="/hope" class={`nav-link ${currentPath === '/hope' ? 'active' : ''}`}>Hope</a>
      <a href="/despair" class={`nav-link ${currentPath === '/despair' ? 'active' : ''}`}>Despair</a>
      <a href="/context" class={`nav-link ${currentPath === '/context' ? 'active' : ''}`}>Context</a>
      <a href="/trends" class={`nav-link ${currentPath === '/trends' ? 'active' : ''}`}>Trends</a>
      <a href="/about" class={`nav-link ${currentPath === '/about' ? 'active' : ''}`}>About</a>
    </div>
  </div>
</nav>

<style>
  .nav-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: var(--nav-bg);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid var(--nav-border);
    z-index: 100;
    padding: 20px 0;
  }

  .nav-content {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    text-decoration: none;
    letter-spacing: -0.02em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
  }

  .nav-logo-icon {
    font-size: 1.2rem;
    opacity: 0.8;
  }

  .nav-links {
    display: flex;
    gap: 32px;
  }

  .nav-link {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    font-size: 0.9rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-link:hover, .nav-link.active {
    color: var(--text-primary);
  }

  @media (max-width: 768px) {
    .nav-content {
      padding: 0 24px;
    }
    
    .nav-links {
      gap: 20px;
      font-size: 0.85rem;
    }
    
    .nav-logo {
      font-size: 1.3rem;
    }

    .nav-logo-icon {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .nav-content {
      padding: 0 16px;
    }
    
    .nav-bar {
      padding: 15px 0;
    }
    
    .nav-links {
      gap: 15px;
      font-size: 0.8rem;
    }
    
    .nav-logo {
      font-size: 1.2rem;
    }

    .nav-logo-icon {
      font-size: 0.9rem;
    }
  }
</style>