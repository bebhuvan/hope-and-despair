---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import { getCollection } from 'astro:content';

const contextArticles = await getCollection('context');
const sortedContext = contextArticles.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Context Stories - Hope and Despair">
  <Navigation />
  
  <header class="page-hero">
    <div class="container">
      <h1 class="page-title">
        <span class="section-marker context">üîç</span>
        Context Stories
      </h1>
      <p class="page-description">
        Analysis, background information, and broader perspective to understand our complex world
      </p>
    </div>
  </header>

  <main class="content">
    <div class="container">
      <div class="articles-container">
        <div class="timeline-line"></div>
        {sortedContext.map((article, index) => (
          <article class="article-item">
            <div class="timeline-marker"></div>
            <div class="article-content">
              <div class="article-meta">
                <span class="source">{article.data.source || 'Unknown Source'}</span>
                <span class="time">{article.data.timeAgo || 'Recently'}</span>
              </div>
              <h2 class="article-title">
                <a href={article.data.url || `/article/${article.slug}`}>{article.data.title}</a>
              </h2>
              <p class="article-summary">{article.data.summary}</p>
              {article.data.tags && (
                <div class="article-tags">
                  {article.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </article>
        ))}
      </div>
    </div>
  </main>

  <style>
    .page-hero {
      padding: 120px 0 60px;
      text-align: center;
      background: var(--bg-secondary);
      border-bottom: 1px solid var(--border-color);
    }

    .page-title {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      font-size: 3rem;
      font-weight: 500;
      margin-bottom: 1rem;
      color: var(--text-primary);
      line-height: 1.1;
    }

    .section-marker {
      font-size: 2.5rem;
      line-height: 1;
      margin-top: -0.1em;
    }

    .section-marker.context {
      color: #5a7a9c;
    }

    .page-description {
      font-size: 1.25rem;
      max-width: 600px;
      margin: 0 auto;
      color: var(--text-secondary);
      opacity: 0.9;
    }

    .content {
      padding: 60px 0 120px;
    }

    .articles-container {
      max-width: 600px;
      margin: 0 auto;
      position: relative;
    }

    .timeline-line {
      position: absolute;
      left: 15px;
      top: 0;
      bottom: 0;
      width: 2px;
      background: linear-gradient(to bottom, 
        transparent 0%, 
        rgba(90, 122, 156, 0.2) 10%, 
        rgba(90, 122, 156, 0.3) 50%, 
        rgba(90, 122, 156, 0.2) 90%, 
        transparent 100%);
      z-index: 1;
    }

    .article-item {
      position: relative;
      margin-bottom: 3rem;
      padding-left: 3rem;
    }

    .timeline-marker {
      position: absolute;
      left: -3rem;
      top: 1.5rem;
      width: 10px;
      height: 10px;
      background: #5a7a9c;
      border-radius: 50%;
      border: 3px solid var(--bg-primary);
      z-index: 2;
      box-shadow: 0 0 0 2px rgba(90, 122, 156, 0.2);
    }

    .article-content {
      background: var(--bg-card);
      padding: 2rem;
      border-radius: 12px;
      border: 1px solid var(--border-color);
      position: relative;
    }

    .article-meta {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
      font-size: 0.9rem;
      color: var(--text-muted);
    }

    .source {
      font-weight: 500;
      color: #5a7a9c;
    }

    .article-title {
      font-size: 1.5rem;
      font-weight: 500;
      margin-bottom: 1rem;
      line-height: 1.3;
    }

    .article-title a {
      color: #5a7a9c;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .article-title a:hover {
      color: #7a9ac0;
    }

    .article-summary {
      font-size: 1.05rem;
      line-height: 1.6;
      color: var(--text-secondary);
      margin-bottom: 1.5rem;
    }

    .article-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tag {
      background: rgba(90, 122, 156, 0.1);
      color: #5a7a9c;
      padding: 0.25rem 0.75rem;
      border-radius: 20px;
      font-size: 0.875rem;
      font-weight: 500;
    }

    @media (max-width: 768px) {
      .page-hero {
        padding: 100px 0 40px;
      }
      
      .page-title {
        font-size: 2.5rem;
      }
      
      .articles-container {
        padding: 0 1rem;
      }
      
      .article-item {
        padding-left: 2.5rem;
        margin-bottom: 2rem;
      }
      
      .timeline-marker {
        left: -2.5rem;
        width: 8px;
        height: 8px;
      }
      
      .timeline-line {
        left: 12px;
      }
      
      .article-content {
        padding: 1.5rem;
      }
    }
  </style>
</Layout>